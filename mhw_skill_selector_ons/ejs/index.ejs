<script type="text/ejs" id="SelectedArmorInfo">
    <div class="selectedArmorInfo">
        <span class="armorName" style="font-weight: bold;color: #4a4ade;">[%= armorName %]</span>
        [% if (firstSkillName !== '-') { %]
            <div style="display: inline-block;background: #ffe2e8;">
                <span style="padding-left:6px;">[%= firstSkillName %]</span>
                <span style="padding-left:6px;">Lv[%= firstSkillVal %]</span>
            </div>
        [% } %]
        [% if (secondSkillName !== '-') { %]
            <div style="display: inline-block;background: #daffde;">
                <span style="padding-left:6px;">[%= secondSkillName %]</span>
                <span style="padding-left:6px;">Lv[%= secondSkillVal %]</span>
            </div>
        [% } %]
        <div style="display: inline-block;background: #dae9ff;">
            <span>[%= lv1Slot %][%= lv2Slot %][%= lv3Slot %]</span>
        </div>
    </div>
</script>

