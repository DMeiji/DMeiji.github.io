<script type="text/ejs" id="CaptureLineContents">
    <div class="item-row">
        <div class="name-content">
            <span>ターゲット</span>
        </div>
        <div class="val-content">
            <select class="targets-list">
                [% for (var i = 0; i < targetInfoList.length; i++) { %]
                    <option value="[%= targetInfoList[i].name %]">[%= targetInfoList[i].dispName %]</option>
                [% } %]
            </select>
        </div>
    </div>

    <div class="item-row">
        <div class="name-content">
            <span>基準値</span>
        </div>
        <div class="val-content">
            <span data-h5-bind="base"></span>
        </div>
    </div>

    <div class="item-row">
        <div class="name-content">
            <span>マルチ補正</span>
        </div>
        <div class="val-content">
            <span data-h5-bind="multiCorrection"></span>
        </div>
    </div>

    <div class="item-row">
        <div class="name-content">
            <span>捕獲ライン(%)</span>
        </div>
        <div class="val-content">
            <span data-h5-bind="captureLine"></span>
        </div>
    </div>

    <div class="item-row">
        <div class="name-content">
            <span>歴戦補正</span>
        </div>
        <div class="val-content">
            <select class="rekisen-hosei">
                <option value="1.0" selected>1.0</option>
                <option value="1.25">1.25</option>
                <option value="1.3">1.3</option>
                <option value="1.5">1.5</option>
            </select>
        </div>
    </div>

    <div class="item-row">
        <div class="name-content">
            <span>必要合計dmg</span>
        </div>
        <div class="val-content">
            <span data-h5-bind="requiredTotalDmg"></span>
        </div>
    </div>

    <div class="item-row">
        <div class="name-content">
            <span>非火力要員数(0~3)</span>
        </div>
        <div class="val-content">
            <input type="number" class="hi-karyoku-youin-num" value="1" min="0" max="3"/>
        </div>
    </div>

    <div class="item-row">
        <div class="name-content">
            <span>非火力要員dmg(0~)</span>
        </div>
        <div class="val-content">
            <input type="number" class="hi-karyoku-youin-dmg" value="0" min="0"/>
        </div>
    </div>

    <div class="item-row required-karyoku-youin-dmg-for-one-row">
        <div class="name-content">
            <span>火力要員dmg/1人</span>
        </div>
        <div class="val-content">
            <span data-h5-bind="requiredKaryokuYouinDmgForOne"></span>
        </div>
    </div>
</script>