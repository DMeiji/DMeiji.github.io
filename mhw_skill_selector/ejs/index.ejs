<!-- ルートコンテナ -->
<script type="text/ejs" id="SelectedArmorInfo">
    <table class="selectedArmorInfoTable">
        <!-- 防具名 -->
        <tr>
            <td colspan=2 class="armorName" style="font-weight: bold;color: #4a4ade;">[%= armorName %]</td>
        </tr>
        
        [% if (firstSkillName !== '-') { %]
            <!-- 第1スキル -->
            <tr>
                <td>[%= firstSkillName %]</td>
                <td style="padding-left:6px;">Lv[%= firstSkillVal %]</td>
            </tr>
        [% } %]
        [% if (secondSkillName !== '-') { %]
            <!-- 第2スキル -->
            <tr>
                <td>[%= secondSkillName %]</td>
                <td style="padding-left:6px;">Lv[%= secondSkillVal %]</td>
            </tr>
        [% } %]

        [% if (lv1Slot !== 0) { %]
            [% for (var i = 0; i < lv1Slot; i++) { %]
                <tr>
                    <td>Lv1スロット</td>
                </tr>
            [% } %]
        [% } %]
        [% if (lv2Slot !== 0) { %]
            [% for (var i = 0; i < lv2Slot; i++) { %]
                <tr>
                    <td>Lv2スロット</td>
                </tr>
            [% } %]
        [% } %]
        [% if (lv3Slot !== 0) { %]
            [% for (var i = 0; i < lv3Slot; i++) { %]
                <tr>
                    <td>Lv3スロット</td>
                </tr>
            [% } %]
        [% } %]
    </table>
</script>

