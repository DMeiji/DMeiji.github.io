<script type="text/ejs" id="SkillFilterTable">
    <table class="skillFilterTable">
        [% $.each(filterSkillMap, function(key, filterInfoByRow) { %]
            <tr>
                <th class="guideRow" colspan="4">[%= filterInfoByRow.guideStr %]</th>
            </tr>
            [% var skills = filterInfoByRow.skills; %]

            [% for (var idx = 0, len = skills.length; idx < len; idx++) { %]
                [% var skillInfo = skills[idx]; %]

                [% if (idx % 4 === 0) {  %]
                    <tr>
                [% } %]

                <td width="25%">
                    <label>
                        <span style="font-weight: normal;">[%= skillInfo.dispSkillName %]</span>
                        <input type="checkbox" class="skillFilterCheckbox" value="[%= skillInfo.skillName %]">
                    </label>
                </td>

                [% if (idx === len - 1) { %]
                    </tr>
                    [% break; %]
                [% } %]

                [% if (idx % 4 === 3) {  %]
                    </tr>
                [% } %]
            [% } %]
        [% }); %]
    </table>
</script>